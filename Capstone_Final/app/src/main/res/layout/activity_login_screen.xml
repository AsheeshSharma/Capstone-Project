<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginChatActivity"
    android:background="@mipmap/cmn_bck">

    <!-- Connection layout -->
    <LinearLayout
        android:id="@+id/etxt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_lay"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_bottom">
        <EditText
            android:id="@+id/etxt_user_id"
            android:layout_margin="@dimen/edit_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="User ID"
            android:singleLine="true"
            android:gravity="center"
            android:inputType="textNoSuggestions"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <EditText
            android:id="@+id/etxt_nickname"
            android:layout_margin="@dimen/edit_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Nickname"
            android:singleLine="true"
            android:gravity="center"
            android:inputType="textNoSuggestions"

            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <Button
            android:id="@+id/btn_connect"
            android:layout_marginTop="@dimen/margin_top"
            android:minWidth="@dimen/btn_min_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Connect"
            android:gravity="center"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:background="@color/colorPrimary"
            android:allowUndo="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_open_channel_list"
            android:layout_marginTop="60dp"
            android:minWidth="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Open Channel"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_group_channel_list"
            android:minWidth="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Group Channel"
            android:layout_below="@+id/etxt_container"
            android:layout_marginRight="@dimen/edit_margin"
            android:layout_marginLeft="@dimen/edit_margin"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_s"
            android:textStyle="bold" />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECT.CREATE.DINE IN"
        android:id="@+id/textView13"
        android:layout_above="@+id/etxt_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_bottom2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_s2" />

</RelativeLayout>
